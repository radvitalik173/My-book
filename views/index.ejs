<section id="allbooks" class="container px-5">
  <% listBooks.forEach(function(books){ %> <!-- Access listBooks directly -->
    <div class="row">
      <div class="col">
        <figure>
          <a href="/book/<%= books.id %>">
            <img src="<%= books.url_image_book %>" alt="<%= books.name_book %>" loading="lazy">
          </a>
        </figure>
      </div>
      <div class="col-9">
        <h2 id="title<%= books.id %>">
          <a href="/book/<%= books.id %>">
            <%= books.name_book %>
          </a>
        </h2>
        <small>Date edit: 
          <%= books.date_edit %>. 
          How strongly I recommend it: 
          <%= books.book_score %>/10.
        </small>
        <p><%= books.short_notes %></p>
        <form action="/book/<%= books.id %>/delete" method="POST">
          <button type="submit" class="mb-5 btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16"><path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"></path><path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"></path></svg><span class="visually-hidden">Button</span>
          </button>
        </form>
      </div>
    </div>
  <% }); %>
</section>
